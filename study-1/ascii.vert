// ========================================
// ASCII効果用頂点シェーダー
// フルスクリーンクワッド（画面全体を覆う四角形）を描画
// ========================================

// 頂点属性: CPUから受け取るデータ
attribute vec3 position;  // 頂点の位置（クリップ空間座標: -1.0 ~ 1.0）
attribute vec2 uv;        // テクスチャ座標（UV座標: 0.0 ~ 1.0）

// Varying変数: フラグメントシェーダーに渡す値
varying vec2 vUv;         // UV座標をフラグメントシェーダーに渡す

void main() {
  // ========================================
  // 1. UV座標をフラグメントシェーダーに渡す
  // ========================================
  // テクスチャの座標（どの位置のピクセルを参照するか）
  vUv = uv;

  // ========================================
  // 2. 頂点位置を設定
  // ========================================
  // position は既にクリップ空間座標（-1.0 ~ 1.0）なので
  // そのまま gl_Position に設定するだけで画面全体を覆う四角形になる
  //
  // フルスクリーンクワッドの4頂点:
  // (-1,  1) --- ( 1,  1)   左上 --- 右上
  //    |           |           |         |
  //    |           |           |         |
  // (-1, -1) --- ( 1, -1)   左下 --- 右下
  gl_Position = vec4(position, 1.0);

  // 【補足】
  // この頂点シェーダーは非常にシンプル
  // 実際の処理はフラグメントシェーダー（ascii.frag）で行われる
}
